<div class="mt-4">
    <h3 class="col-lg-6 offset-lg-4"> Các Phim Hay Trong Tuần </h3>
    <div class="row">

        {{#each films}}

            <div class="col-lg-3">
                <div class="card">
                  <img class="card-img-top" src="{{this.img}}" alt="Card image cap" style="height: 200px">
                    <div class="card-body">
                        <h5 class="card-title" style="font-size: 18px">{{this.name}}</h5>
                        <a href="#" class="btn btn-danger" >Yêu Thích</a>
                        <a href="/view/{{this.filmLink}}" class="btn btn-primary" >Xem Phim</a>
                    </div>
                </div>
            </div>

        {{/each }}

    </div>
</div>